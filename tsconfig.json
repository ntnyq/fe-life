{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "node",
    "types": ["vite/client", "vite-plugin-pwa/client"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "./docs/**/*.ts",
    "./docs/**/*.vue",
    "./docs/**/*.md",
    "./docs/.vitepress/**/*.ts",
    "./docs/.vitepress/**/*.vue"
  ]
}
